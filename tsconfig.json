{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"  
  ],
  "typeRoots" : [
    "node_modules/@types"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled",
    "strictMetadataEmit": true
  }
}