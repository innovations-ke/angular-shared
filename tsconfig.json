{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "sourceMap": false,
    "declaration": false,
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
